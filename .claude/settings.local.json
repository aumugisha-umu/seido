{
  "permissions": {
    "allow": [
      "Bash(npx tsc:*)",
      "Bash(npm run lint)",
      "WebSearch",
      "WebFetch(domain:supabase.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:dev.to)",
      "WebFetch(domain:docs.flutterflow.io)",
      "Bash(npm install:*)",
      "Bash(dir:*)",
      "WebFetch(domain:viesapi.eu)",
      "Bash(npm run lint:*)",
      "WebFetch(domain:cbeapi.be)",
      "WebFetch(domain:www.ublo.immo)",
      "WebFetch(domain:www.smovin.app)",
      "Bash(node -e:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(powershell:*)",
      "WebFetch(domain:resend.com)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "WebFetch(domain:developers.google.com)",
      "mcp__ide__getDiagnostics",
      "Bash(npm run build:*)",
      "Bash(node .claude/scripts:*)",
      "WebFetch(domain:blog.fsck.com)",
      "Bash(node:*)",
      "WebFetch(domain:visgl.github.io)",
      "WebFetch(domain:m3.material.io)",
      "Bash(timeout:*)",
      "Bash(npx eslint:*)",
      "WebFetch(domain:docs.stripe.com)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/track-changes.js",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/update-active-context.js",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory"
}
